<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="90"
                android:centerColor="#b19cb1"
                android:centerX="50%"
                android:endColor="#616f7d"
                android:startColor="#616f7d" />
            <stroke
                android:color="#000000"
                android:width="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="90"
                android:centerColor="#d8bfd8"
                android:centerX="50%"
                android:endColor="#778899"
                android:startColor="#778899" />
            <stroke
                android:color="#000000"
                android:width="1dp" />
        </shape>
    </item>
</selector>